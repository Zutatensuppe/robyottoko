{
  "name": "robyottoko",
  "type": "module",
  "version": "0.0.0",
  "description": "",
  "main": "index.js",
  "author": "",
  "license": "ISC",
  "scripts": {
    "build:frontend": "vite build --config vite.config.js",
    "build:server:assets": "copyfiles -u 1 src/config_data/* build/server/",
    "build:server:app": "rolldown -c",
    "build:server": "npm run build:server:app && npm run build:server:assets",
    "build:versionfile": "git rev-parse --short HEAD > build/version.txt",
    "build:app": "npm run build:frontend && npm run build:versionfile && npm run build:server",
    "build:archive": "rimraf dist/build.zip && 7z a -mx0 dist/build.zip ./build/* ./db",
    "build": "npm run build:app && npm run build:archive",
    "lint": "vue-tsc --noEmit && eslint src",
    "test": "vitest",
    "dev-services": "docker-compose up",
    "dev-backend": "nodemon --delay 2 -x \"node --experimental-specifier-resolution=node --loader ts-node/esm\" --max-old-space-size=256 -w src src/index-dev.ts -e ts --trace-warnings --ignore public/static/ --ignore src/frontend/ --ignore src/frontend_widgets/",
    "dev-frontend": "vite",
    "bot": "nodemon --watch build --max-old-space-size=256 -e js build/server/index.js"
  },
  "dependencies": {
    "@ckpack/vue-color": "^1.5.0",
    "@monaco-editor/loader": "^1.4.0",
    "@twurple/api": "^7.4.0",
    "@twurple/auth": "^7.4.0",
    "@twurple/chat": "^7.4.0",
    "@zutatensuppe/emoji-detect": "^1.0.6",
    "async-mutex": "^0.4.0",
    "bulma": "^0.9.4",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "font-awesome": "^4.7.0",
    "gsap": "^3.12.4",
    "jsonwebtoken": "^9.0.2",
    "mitt": "^3.0.1",
    "multer": "^1.4.4",
    "node-fetch": "^3.3.2",
    "pg": "^8.11.3",
    "vue": "^3.4.0",
    "vue-router": "^4.2.5",
    "vue-toastification": "^2.0.0-rc.5",
    "vuedraggable": "^4.1.0"
  },
  "devDependencies": {
    "@types/cookie-parser": "^1.4.6",
    "@types/cors": "^2.8.17",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/multer": "^1.4.11",
    "@types/pg": "^8.10.9",
    "@types/vue": "^2.0.0",
    "@types/vue-router": "^2.0.0",
    "@types/ws": "^8.5.10",
    "@typescript-eslint/eslint-plugin": "^6.16.0",
    "@vitejs/plugin-vue": "^6.0.1",
    "copyfiles": "^2.4.1",
    "eslint": "^8.56.0",
    "eslint-plugin-vue": "^9.19.2",
    "ngrok": "^5.0.0-beta.2",
    "rimraf": "^5.0.5",
    "rolldown": "^1.0.0-beta.34",
    "sass": "^1.69.6",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3",
    "vite": "^6.2.6",
    "vitest": "^3.1.1",
    "vue-tsc": "^1.8.27"
  }
}
